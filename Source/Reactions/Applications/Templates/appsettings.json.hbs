{
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
        ],
        "MinimumLevel": {
            "Default": "Verbose",
            "Override": {
                "Aksio": "Information",
                "Microsoft": "Warning",
                "Microsoft.AspNetCore.HttpLogging": "Information",
                "Microsoft.Hosting.Lifetime": "Information",
                "System": "Warning",
                "Orleans": "Information"
            }
        },
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId"
        ],
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
                }
            }
        ]
    },
    "AllowedHosts": "*"
}
