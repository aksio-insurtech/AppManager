{
    "Kestrel": {
        "Endpoints": {
            "Http": {
                "Url": "http://+:80"
            }
        }
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console"
        ],
        "MinimumLevel": {
            "Default": "Verbose",
            "Override": {
                "Aksio": "Information",
                "Microsoft": "Warning",
                "Microsoft.AspNetCore.HttpLogging": "Warning",
                "Microsoft.Hosting.Lifetime": "Information",
                "System": "Warning",
                "Orleans": "Information"
            }
        },
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId"
        ],
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "formatter": "Aksio.Cratis.Applications.Logging.RenderedCompactJsonFormatter, Aksio.Cratis.Applications"
                }
            }
        ]
    },
    "AllowedHosts": "*"
}
